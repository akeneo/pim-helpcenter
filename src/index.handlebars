{{!-- Homepage --}}
{{#> layout  title="PIM Help center"}}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">
                <img height="20" src="../img/akeneo.svg"></img>
            </a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">v3 <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li class="dropdown-title">Switch to</li>
                    <li><a href="/pim/v3/{{selectedLanguage}}/index.html">v3</a></li>
                    <li><a href="/pim/v2/{{selectedLanguage}}/index.html">v2</a></li>
                    <li><a href="/pim/v2/{{selectedLanguage}}/index-older.html">Older versions</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="text-transform: uppercase;"><img src="../img/{{selectedLanguage}}-flag.svg" class="flag"/> {{selectedLanguage}}<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li class="dropdown-title">{{switch_to}}</li>
                    <li><a href="/pim/v3/en/index.html"><img src="../img/en-flag.svg" class="flag"/> EN</a></li>
                    <li><a href="/pim/v3/fr/index.html"><img src="../img/fr-flag.svg" class="flag"/> FR</a></li>
                </ul>
            </li>
        </ul>
    </div>
</nav>
<div class="jumbotron jumbotron-search">
    <div class="container-fluid">
        <img class="img-responsive center-block" width="75" src="../img/illus-pim.svg"/>
        <h3 class="text-center">PIM help center</h3>
        <h1 class="text-center emphasis">{{can_we_help_you}}</h1>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
                <div class="form-group" style="margin: 10px 0;">
                    <input id="docSearch-input" type="text" placeholder="{{type_your_search}}" class="form-control input-lg">
                </div>
                <small>{{search_example}} <strong><a href="articles/what-is-a-family.html">"{{what_family}}"</a></strong>, <strong><a href="articles/manage-your-projects.html">"{{projects}}"</a></strong> or <strong><a href="articles/build-your-user-roles.html">"{{how_permissions}}"</a></strong></small>  
            </div>
        </div>
    </div>
</div>
{{#if isNotEnglish}}
    <div class="container-fluid help-us">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8">
                <img src="../img/{{selectedLanguage}}-flag.svg" width="20" style="vertical-align: baseline;"/>
                <strong> {{help_center_in_your_language}}</strong>
                <p><small>{{help_center_in_your_language_description}} <a href="https://github.com/akeneo/pim-helpcenter/wiki/Translate-an-article" style="color: white;">{{its_here}}</a></small></p>
            </div>
        </div>
    </div>
{{/if}}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-lg-4">
            <div class="persona">
                <a href="themes-for-julia.html">
                    <img class="img-responsive center-block" src="../img/illus-using.svg"/>
                    <h2 class="text-center">{{{using_akeneo}}}</h2>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                            <p class="text-center"><em>{{using_akeneo_description}}</em></p>
                            <button class="btn btn-default btn-block">{{browse_all_articles}}</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-sm-6 col-lg-4">
            <div class="persona">
                <a href="themes-for-peter.html">
                    <img class="img-responsive center-block" src="../img/illus-setting-up.svg"/>
                    <h2 class="text-center">{{{setting_up_the_pim}}}</h2>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                            <p class="text-center"><em>{{setting_up_the_pim_description}}</em></p>
                            <button class="btn btn-default btn-block">{{browse_all_articles}}</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-sm-offset-3 col-sm-6 col-lg-offset-0 col-lg-4">
            <div class="persona">
                <a data-toggle="modal" data-target="#myModal">
                    <img class="img-responsive center-block" src="../img/illus-coding-around.svg"/>
                    <h2 class="text-center">{{{coding_around}}}</h2>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                            <p class="text-center"><em>{{coding_around_description}}</em></p>
                            <button class="btn btn-default btn-block">{{dev_hub_link}}</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
{{#if popularArticles}}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h2>{{popular_guides}}</h2>
            <div class="row">
                {{#each popularArticles}}
                <div class="col-xs-12 col-sm-6 col-lg-4">
                    <a href="articles/{{articlePath}}"> <p>{{{articleName}}} ></p></a></div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h2>{{more_curious}}</h2>
        </div>
        <div class="col-xs-6 col-sm-4">
            <a href="https://marketplace.akeneo.com/"><p>{{marketplace}} ></p></a>
        </div>
        <div class="col-xs-6 col-sm-4">
            <a href="https://www.akeneo.com/customers-stories/?source=akeneo-help"><p>{{customer_stories}} ></p></a>
        </div>
        <div class="col-xs-6 col-sm-4">
            <a href="https://www.akeneo.com/knowledge-base/?source=akeneo-help"><p>{{knowledge_base}} ></p></a>
        </div>
    </div>
</div>
<div class="modal fade modal-fullpage" id="myModal" tabindex="-1" role="dialog" aria-labelledby="codingAround">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <span class="modal-cancel" data-dismiss="modal" aria-label="Close"></span>
            <h1 class="text-center">{{coding}}</h1>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <div class="persona">
                            <a href="https://api.akeneo.com">
                                <img class="img-responsive center-block" src="../img/illus-api.svg" style="max-width: 400px;"/>
                                <h2 class="text-center">{{{build_connectors}}}</h2>
                                <div class="row">
                                    <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                                        <p class="text-center emphasis">{{api_friend}}</p>
                                        <p class="text-center"><em>{{api_friend_description}}</em></p>
                                        <button class="btn btn-default btn-block">{{go_API}}</button>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="persona">
                            <a href="https://docs.akeneo.com">
                                <img class="img-responsive center-block" src="../img/illus-pimp-pim.svg" style="max-width: 400px;"/>
                                <h2 class="text-center">{{{pimp_my_pim}}}</h2>
                                <div class="row">
                                    <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                                        <p class="text-center emphasis">{{follow_cookbooks}}</p>
                                        <p class="text-center"><em>{{follow_cookbooks_description}}</em></p>
                                        <button class="btn btn-default btn-block">{{technical_docs}}</button>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/layout}}
